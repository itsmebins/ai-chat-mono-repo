{
  "name": "@baserepo/server",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "start": "node build/index.js --trace-warnings",
    "dev": "ts-node index.ts",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "test": "jest --testEnvironment=node --runInBand --coverageDirectory=.coverage",
    "kill": "kill -9 $(lsof -ti:8080,8081)",
    "ssl": "npx local-ssl-proxy --key ../../local.backend.exampledomain.com-key.pem --cert ../../local.backend.exampledomain.com.pem --source 8081 --target 8080 --hostname local.backend.exampledomain.com"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.576.0",
    "@baserepo/utils": "workspace:*",
    "@fastify/basic-auth": "^5.1.1",
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^8.1.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fastify-raw-body": "^4.2.2",
    "jimp": "^0.22.12",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "local-ssl-proxy": "^2.0.5",
    "openai": "^4.47.2",
    "pg": "^8.11.5",
    "pino": "^8.16.1",
    "resend": "^3.2.0"
  },
  "devDependencies": {
    "@baserepo/tsconfig": "workspace:*",
    "@faker-js/faker": "^8.1.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@swc/core": "^1.3.100",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.16.17",
    "@types/pg": "^8.11.5",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.4.4"
  }
}
